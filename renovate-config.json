{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Default configuration for repositories in the Webware organisation",
    "extends": [
        ":dependencyDashboard",
        ":ignoreModulesAndTests",
        ":automergeMinor",
        ":automergeBranch",
        ":rebaseStalePrs",
        ":semanticCommitsDisabled",
        ":separateMajorReleases",
        ":combinePatchMinorReleases",
        ":enableVulnerabilityAlerts",
        ":timezone(UTC)",
        ":gitSignOff",
        ":label(renovate)",
        "group:allNonMajor"
    ],
    "commitBodyTable": true,
    "lockFileMaintenance": {"enabled": true, "extends": ["schedule:daily"]},
    "platformAutomerge": true,
    "prFooter": "[Read more information](https://github.com/tyrsson/.github/blob/master/renovate.md) about the use of [Renovate Bot](https://github.com/renovatebot/renovate).",
    "rangeStrategy": "replace",
    "rollbackPrs": true,
    "packageRules": [
        {"matchDepTypes": ["require"], "rangeStrategy": "widen"},
        {"matchPackagePatterns": ["^webware/"], "groupSlug": "webware", "groupName": "Webware packages"},
        {
            "matchPackageNames": ["php"],
            "allowedVersions": "^8.2",
            "extends": [":automergeDisabled", ":automergePr", ":label(Awaiting Maintainer Response)"],
            "ignoreUnstable": false,
            "groupName": "PHP"
        }
    ],
    "vulnerabilityAlerts": {
        "extends": [":automergeDisabled", ":automergePr", ":labels(Awaiting Maintainer Response, security)"],
        "rangeStrategy": "bump"
    }
}